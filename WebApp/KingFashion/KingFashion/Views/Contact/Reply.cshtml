@model Contact

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Xem Nội dung</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="control-label" type="text" />
            <input type="hidden" name="Id" class="form-control" data-rule-required="true" value="@ViewBag.ContactId" />
        </div>
        <div class="form-group">
            <label>Nội dung</label>
            <textarea asp-for="Content" type="text" class="control-label" readonly></textarea>
        </div>
        <div class="form-group">
            <label>Trạng thái</label>
            <input asp-for="Status" class="control-label" type="text" data-rule-required="true" />
        </div>
        <div class="form-group">
            <label>Tiêu đề</label>
            <input type="text" name="Subject" class="form-control" data-rule-required="true" />
        </div>
        <div class="form-group">
            <label>Nội dung Trả lời</label>
            <textarea type="text" name="ContentReply" class="form-control"></textarea>
        </div>
        <div>
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnSend">
                <i class="ti-close"></i> Phản hồi
            </button>
        </div>
    </form>
</div>
@section scripts{
    <script asp-append-version="true">
        var contact = {};
        $("#btnSend").on("click", function () {
            contact.save();
        })
        contact.save = function () {
            /*if ($('#frmContact').valid()) {*/
            var emailObj = {};
            emailObj.To = $('input[name="Email"]').val();
            emailObj.Subject = $('input[name="Subject"]').val();
            emailObj.Body = $('textarea[name="ContentReply"]').val();
            emailObj.FromEmail = 'kingstartloving@gmail.com'
            emailObj.FromPassword = 'Loveemyeu2';
            $.ajax({
                url: "https://localhost:44368/Contact/Reply",
                method: "POST",
                dataType: "json",
                contentType: "application/json",
                data: JSON.stringify(emailObj),
                success: function (data) {
                    if (data.success) {
                        alert("Trả lời thành công");
                    }
                    else {
                        alert("Trả lời không thành công");
                    }
                }
            });

            /*}*/
        }
    </script>
}
