@model KingFashion.Models.Contacts.Contact

@{
    ViewData["Title"] = "ViewContact";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<h1>ViewContact</h1>

<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status)
            {
                <input value="Đã phản hồi" class="form-control" />
            }
            else
            {
                <input value="Chưa phản hồi" class="form-control" />
            }

        </dd>
    </dl>
</div>
<div>
    <a href="javascript:;" class="btn btn-out-dashed btn-success btn-square" onclick="contact.get(@ViewBag.ContactId)">Trả lời</a>
    <a asp-action="Index">Back to List</a>
</div>
<div class="modal fade" id="replyModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Xem Nội dung</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmContact">
                    <div class="form-group">
                        <label>To</label>
                        <input type="text" name="EmailTo" class="form-control" data-rule-required="true" value="@ViewBag.To" />
                        <input type="hidden" name="Id" class="form-control" data-rule-required="true" value="@ViewBag.ContactId" />
                    </div>
                    <div class="form-group">
                        <label>Tiêu đề</label>
                        <input type="text" name="Subject" class="form-control" data-rule-required="true" />
                    </div>
                    <div class="form-group">
                        <label>Nội dung Trả lời</label>
                        <textarea type="text" name="ContentReply" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="ti-close"></i> Đóng
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="contact.save(@ViewBag.ContactId);">
                    <i class="ti-close"></i> Phản hồi
                </button>
            </div>
        </div>
    </div>
</div>
@section scripts {

    <script src="~/js/Contact.js" asp-append-version="true"></script>

}
